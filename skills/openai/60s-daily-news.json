{
  "openapi": "3.0.0",
  "info": {
    "title": "60s Daily News API",
    "description": "Get daily curated news - 15 selected news items from China and worldwide, updated daily",
    "version": "1.0.0",
    "contact": {
      "name": "vikiboss",
      "url": "https://github.com/vikiboss/60s"
    }
  },
  "servers": [
    {
      "url": "https://60s.viki.moe/v2"
    }
  ],
  "paths": {
    "/60s": {
      "get": {
        "operationId": "getDailyNews",
        "summary": "Get daily curated news",
        "description": "Retrieve daily curated news with 15 selected news items and a daily quote. Data updates every 30 minutes.",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "description": "Optional date in YYYY-MM-DD format",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            }
          },
          {
            "name": "encoding",
            "in": "query",
            "description": "Output format",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["json", "text", "markdown", "image", "image-proxy"],
              "default": "json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "date": {
                      "type": "string",
                      "description": "News date"
                    },
                    "day_of_week": {
                      "type": "string",
                      "description": "Day of week in Chinese"
                    },
                    "lunar_date": {
                      "type": "string",
                      "description": "Lunar calendar date"
                    },
                    "news": {
                      "type": "array",
                      "description": "Array of 15 news items",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string"
                          },
                          "link": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "tip": {
                      "type": "string",
                      "description": "Daily quote"
                    },
                    "image": {
                      "type": "string",
                      "description": "Image URL"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
