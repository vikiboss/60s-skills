{
  "openapi": "3.0.0",
  "info": {
    "title": "Weather Information API",
    "description": "Get real-time weather and forecasts for locations in China",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://60s.viki.moe/v2"
    }
  ],
  "paths": {
    "/weather/realtime": {
      "get": {
        "operationId": "getRealtimeWeather",
        "summary": "Get real-time weather",
        "description": "Get current weather including temperature, humidity, wind, and air quality",
        "parameters": [
          {
            "name": "location",
            "in": "query",
            "description": "Location name (city or district in Chinese)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/weather/forecast": {
      "get": {
        "operationId": "getWeatherForecast",
        "summary": "Get weather forecast",
        "description": "Get multi-day weather forecast",
        "parameters": [
          {
            "name": "location",
            "in": "query",
            "description": "Location name",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    }
  }
}
