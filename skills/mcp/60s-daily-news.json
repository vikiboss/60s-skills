{
  "name": "60s-daily-news",
  "version": "1.0.0",
  "description": "Get daily curated news - 15 selected news items from China and worldwide, updated daily. Perfect for quick world updates in 60 seconds.",
  "protocol": "mcp",
  "tools": [
    {
      "name": "get_daily_news",
      "description": "Retrieve daily curated news with 15 selected news items and a daily quote. Data updates every 30 minutes, typically by 10 AM.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "description": "Optional date in YYYY-MM-DD format. If not provided, returns the latest available news.",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "encoding": {
            "type": "string",
            "enum": ["json", "text", "markdown", "image", "image-proxy"],
            "default": "json",
            "description": "Output format: json (structured data), text (plain text), markdown (formatted markdown), image (redirect to image URL), image-proxy (returns image binary)"
          }
        }
      },
      "endpoint": {
        "url": "https://60s.viki.moe/v2/60s",
        "method": "GET",
        "parameters": {
          "date": "query",
          "encoding": "query"
        }
      },
      "examples": [
        {
          "description": "Get latest news in JSON format",
          "input": {
            "encoding": "json"
          }
        },
        {
          "description": "Get news for specific date in markdown",
          "input": {
            "date": "2024-01-15",
            "encoding": "markdown"
          }
        },
        {
          "description": "Get latest news as plain text",
          "input": {
            "encoding": "text"
          }
        }
      ],
      "response": {
        "json": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "description": "News date"
            },
            "day_of_week": {
              "type": "string",
              "description": "Day of week in Chinese"
            },
            "lunar_date": {
              "type": "string",
              "description": "Lunar calendar date"
            },
            "news": {
              "type": "array",
              "description": "Array of 15 news items",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "link": {
                    "type": "string"
                  }
                }
              }
            },
            "tip": {
              "type": "string",
              "description": "Daily quote or tip"
            },
            "image": {
              "type": "string",
              "description": "Image URL"
            },
            "updated": {
              "type": "string",
              "description": "Last update time"
            }
          }
        }
      }
    }
  ],
  "metadata": {
    "author": "vikiboss",
    "homepage": "https://github.com/vikiboss/60s",
    "documentation": "https://docs.60s-api.viki.moe",
    "source_repository": "https://github.com/vikiboss/60s",
    "license": "MIT",
    "tags": ["news", "daily", "china", "information", "60s"],
    "category": "information",
    "rate_limit": {
      "description": "Cached responses with millisecond-level speed. No explicit rate limits on public instance."
    }
  }
}
